.dots
  text-align: center
  margin-bottom s(-200)
  &__list
    position: relative
    display inline-block
    margin 0
    padding 0
    list-style none
    cursor default
    user-select none
  &__li
    position relative
    display block
    float left
    margin 0 s(12)
    width s(22)
    height s(22)
    cursor pointer
  &__item
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    outline none
    border-radius 50px
    background-color $cBlueCiel
    background-color rgba(19, 106, 128, 0.3)
    text-indent -9999px
    cursor pointer
    background-color transparent
    box-shadow inset 0 0 0 2px $cBlueCiel
    transform translateZ(0)
    transition .3s ease all
    transition-property transform, box-shadow
    &:hover
    &:focus
      box-shadow: inset 0 0 0 2px rgba(19, 106, 128, 0.6)
  &__li.current .dots__item
    transition .6s ease all
    transition-property transform, box-shadow
    transform translateZ(0)
    box-shadow inset 0 0 0 22px $cBlueCiel

.header-shawl
  background linear-gradient(138deg, rgba(12,81,107,0.92) 0%, rgba(5,43,56,0.96) 80%), url("../img/header-home-background.jpg") no-repeat center center/cover
  &__title
    position: absolute
    left: 0
    right: 0
    top 0
    height: 100%;
    margin-left: auto
    margin-right: auto
    text-align: center
    &__strong
    &__small
      position: absolute
      left: 0
      right: 0
      display block
      height: 100%;
      Catamaran($text-XXXXL, 16, 700, 1.1)
      background url("../img/header-home-background.jpg") no-repeat center center/cover
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      transform translateZ(0)
      filter: brightness(1.3);
    &__strong
      padding-top 250px
      margin-bottom s(30, 64.85)
      letter-spacing 2px
    &__small
      font-weight 400
      padding-top 350px
      font-size s($text-XL = 26.56, 16)
      text-transform: uppercase
      letter-spacing 2px
  &__gobottom
    position absolute
    bottom 30%
    left 0
    right 0
    margin-left: auto
    margin-right: auto
    &-arrow
      transition .3s ease transform
    &-arrow2
      opacity 0
      transition .3s ease all
      transition-property opacity, transform
    &:hover .header-shawl__gobottom-arrow
      transform translateY(17px)
      opacity 0
      transition .3s ease all
      transition-property opacity, transform
    &:hover .header-shawl__gobottom-arrow2
      opacity 1
      transform translateY(17px)
      transition .3s ease all
      transition-property opacity, transform

.no-backgroundcliptext
  .header-shawl__title__strong
  .header-shawl__title__small
    background none
    color $cWhite
    filter none

.logo
  position: relative
  top s(15, 18)
  color $cWhite
  font-weight: 700
  font-size 18px
  letter-spacing 1px
  padding s(10, 18) s(0)

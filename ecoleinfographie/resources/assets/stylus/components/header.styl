.header-shawl
  background linear-gradient(138deg, rgba(12,81,107,0.92) 0%, rgba(5,43,56,0.96) 80%), url("../img/header-home-background.jpg") no-repeat center center/cover

  &__title
    position: absolute
    left: 0
    right: 0
    top: 50%
    height: 100%;
    padding-top: s(260, 16)
    display: inline-block
    margin-left: auto
    margin-right: auto
    text-align: center
    transform: translateY(-50%)
    background url("../img/header-home-background.jpg") no-repeat center center/cover
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: brightness(1.3);
    &__strong
    &__small
      color $cWhite
      display block
      Catamaran($text-XXXXL, 16, 700, 1.1)
    &__strong
      margin-bottom s(30, 64.85)
      letter-spacing 2px
    &__small
      font-weight 400
      font-size s($text-XL = 26.56, 16)
      text-transform: uppercase
      letter-spacing 2px
  &__gobottom
    position absolute
    bottom 30%
    left 0
    right 0
    margin-left: auto
    margin-right: auto
    &-arrow
      transition .3s ease transform
    &-arrow2
      opacity 0
      transition .3s ease all
      transition-property opacity, transform
    &:hover .header-shawl__gobottom-arrow
      transform translateY(17px)
      opacity 0
      transition .3s ease all
      transition-property opacity, transform
    &:hover .header-shawl__gobottom-arrow2
      opacity 1
      transform translateY(17px)
      transition .3s ease all
      transition-property opacity, transform

.no-backgroundcliptext
  .header-shawl__title
    background none
    color $cWhite
    filter none

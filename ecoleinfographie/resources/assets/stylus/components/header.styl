/************************************\
  ANIMATION DU MENU & DECOR
\************************************/

.subnav
  &__jobs
    transform translateX(-216px) translateY(-20px)  translate3D(0,0,0) scaleX(0.93) // -216px pour centrer
    opacity 0
    transition .2s ease all
  &__jobs:before
    transform translateY(8px) rotate(45deg)
    transition .1s .1s ease transform
  &__jobs.open
    visibility visible
    transform translateX(-216px) translateY(0px) scale(1)
    transition .2s ease all
    opacity 1;
    transition-property transform, opacity
  &__jobs.open:before
    transform translateY(0) rotate(45deg)
    transition .1s .1s ease transform
  &__jobs__cloud
    position: absolute
    top 20px
    right 80px
    transform translateX(-120px)
    opacity 0
    transition .4s ease-in all
    transition-property transform, opacity
  &__jobs.open .subnav__jobs__cloud
    transform translateX(0px)
    opacity 1
    transition .4s ease-out all
    transition-property transform, opacity
  &__jobs__town
    overflow: hidden
    position: absolute
    bottom: 0
    left 0
    right 0
    z-index -1
    border-radius 5px
    & svg
      transform translateY(120px)
      transition .5s $ease-out-quart transform
  &__jobs.open .subnav__jobs__town svg
    transform translateY(10px)
    transition .5s $ease-out-quart transform



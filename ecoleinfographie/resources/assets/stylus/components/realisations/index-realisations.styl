.index-rea
  &__container
    @extend .containerGridz

/************************************\
		TABULATION
\************************************/
.index-rea
  &__filter
    position: relative
    padding-top s(80)
    text-align: center
    &__item
      position: relative
      display: inline-block
    &__link
      display: inline-block
      font-size s($sz8)
      font-weight 900
      letter-spacing 1.2px
      text-transform: uppercase
      padding s(16, $sz8) s(28, $sz8)

    .index-rea__filter__link:hover
    .index-rea__filter__link:focus
      color $cBlueCiel
      transition .3s ease color

    .index-rea__filter__item:before
    .index-rea__filter__item:after
    .index-rea__filter__link:before
    .index-rea__filter__link:after
      content: ''
      position: absolute
      background: $cBlueCiel
      transition: transform 0.2s

    .index-rea__filter__item:before
    .index-rea__filter__item:after
      top: 0
      width: 2px
      height: 100%
      transform: scale3d(1, 0, 1)

    .index-rea__filter__item:before
      left: 0
      transform-origin: 50% 100%

    .index-rea__filter__item:after
      right: 0
      transform-origin: 50% 0%

    .index-rea__filter__link:before
    .index-rea__filter__link:after
      left: 0
      width: 100%
      height: 2px
      transform: scale3d(0, 1, 1)

    .index-rea__filter__link:before
      top: 0
      transform-origin: 0 50%

    .index-rea__filter__link:after
      bottom: 0
      transform-origin: 100% 50%

    &__item.active
      position: relative
      & .index-rea__filter__link
        position: relative
        color $cBlueCiel
        transition .3s ease color
      & .index-rea__filter__link:hover
      & .index-rea__filter__link:focus
        color $cBlueCiel
        transition .3s ease color
      &:before
      &:after
      & .index-rea__filter__link:before
      & .index-rea__filter__link:after
        transform: scale3d(1, 1, 1);
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 0.4s;

/************************************\
		grid
\************************************/

.reas-wrapper
  &__title
    @extend .hidden

// Position img
.reas
  &__img-wrapper
    width 100%
    position: relative
    overflow: hidden
  &__img
    width 100%
    height 355px
    object-fit cover;
    object-position: center;

// Create card
.reas
  &__figure
    position: relative
  &__figcaption
    position: absolute
    @extend .cover
    background-image: url('data:image/svg+xml;base64,')
    background-image: linear-gradient(333deg,rgba(0, 0, 0, 0.95) 0%,rgba(39, 39, 39, 0.95) 22.2%,rgba(88, 88, 88, 0.95) 73.5%,rgba(88, 88, 88, 0.95) 100%);
    z-index 1
    transform translateX(0) translateY(0)
    visibility hidden
    opacity 0
    transition .1s ease all
    transition-property opacity, transform, visibility
  &__section
    position absolute
    right: -10px
    top: -10px
    display inline-block
    //background-color $cWhite
    &__name
      position: relative
      display: inline-block
      font-size s($sz6)
      padding s(10) s(15)
      text-transform: uppercase
      font-weight 600
      letter-spacing 0.8px
      color $cBlueTitles
      overflow hidden
      z-index 2
      transform translateX(10px)
      &:after
        position absolute
        top: 0
        right: -100%
        content ''
        display block
        width 100%
        height 100%
        background-color $cWhite
        z-index -1
    &__name-text
      display: inline-block
      font-size s($sz6, $sz6)
      color $cBlueTitles
      transform translateY(-20px)
      opacity 0
      transition .4s ease all
      transition-property transform, opacity
  &__desc
    text-align: center
    position relative
    height 100%
    &-wrapper
      position absolute
      top: 50%
      left: 0
      right: 0
      transform: translateY(-50%)
    &__name
      display: block
      padding 0 s(20, $sz4)
      font-size s($sz4)
      color $cWhite
      font-weight 700
      letter-spacing 0.8px
    &__author
      font-size s($sz8)
      font-weight 300
      color $cWhite
      letter-spacing 0.24px
      line-height: 1.2
      &:before
        icon('men')
        display: inline-block
        margin s(20, $sz8) s(10, $sz8) 0 0

// hover card
.reas
  &__item:hover .reas
    &__figcaption
      visibility visible
      opacity 1
      transform translateX(10px) translateY(-10px)
      transition .3s ease all
      transition-property opacity, transform
    &__section
      &__name:after
        right 0
        transition .3s $ease-out-quad right
      &__name-text
        transform translateY(0)
        opacity 1
        transition .4s ease all
        transition-property transform, opacity



.oneRea
  background-color $cBackgroundGrey
  .container
    background-color $cBackgroundGrey
    &:before
      background-color $cBackgroundGrey

.rea
  &__container
    @extend .containerGridz
    margin-top s(100)
  &__wrapper-top
    position: relative
    margin-bottom s(150)
    &:after
      @extend .clearfix
  &__name
    @extend .title51
    text-align: center
    &:after
      content ''
      height s(30, $sz2)
      width 1px
      display: block
      margin s(30, $sz2) auto
      background $cGrey-lineMenu
  &__author
    display: block
    text-align: center
    margin-bottom s(80)
    font-weight 300
    font-size s($sz6)
    letter-spacing 0.5px
  &__link
    display: inline-block
    font-size: s($sz6, $sz6);
    @extend .linkInText
    font-weight 300
    &:after
      bottom -4px

/************************************\
		INFOS REA
\************************************/
.rea-infos
  position absolute
  top s(45)
  right: 0
  width s(420)
  background $cWhite
  padding-bottom s(35)
  box-shadow: 0 0 6px 0 rgba(185,185,185,0.50);
  &__title
    margin-bottom s(35, $sz6)
    padding s(35, $sz6) s(20, $sz6)
    font-size s($sz6)
    font-weight 900
    color $cBlueTitles
    letter-spacing 3px
    text-transform: uppercase
    text-align: center
    border-bottom 1px solid $cGrey-lineMenu2
  &__list
    padding 0 s(35) 0 s(35)
  &__term
    margin s(30, $sz10) 0 s(15, $sz10)
    font-size: s($sz10)
    font-weight 900
    color $cBlueTitles
    letter-spacing 1.3px
    text-transform: uppercase
  &__data
    font-size: s($sz7)
    margin-bottom s(15, $sz7)
    &:before
      content ''
      display inline-block
      width: 10px
      height 3px
      margin-right s(10, $sz7)
      background $cGrey-lineMenu
      vertical-align middle

.rea-share
  padding 0 s(35) 0 s(35)
  &__label
    display: block
    @extend .rea-infos__term
    margin s(30, $sz10) 0 s(10, $sz10)
  & .social-list-circle__item
    display: inline-block
    margin-right s(10)
  & .social-list-circle__link:before
    font-size 35px

.rea-infos.rea-infos--with-button
  padding-bottom s(85)

/************************************\
		BUTTONS FOR REA-INFOS
\************************************/
.rea-button__wrapper
  position: absolute
  bottom s(-25)
  left 0
  right: 0
  text-align: center
.rea-button
  @extend .buttonLeftToRightBlack
  &__label
    position: relative
    top -5px
  &:after
    icon('portfolio-circle');
    font-size 25px
    position: relative
    margin-left 10px
  &__hidden
    @extend .hidden

/************************************\
		DESC & PROF
\************************************/

.rea-content
  position: relative
  &:after
    @extend .clearfix
  &__desc
    background $cWhite
    width col(8,12) + gutter(12)
    padding s(60) s(70) s(60) 14%
    & .rea-content__title
      color $cBlueTitles
  &__prof
    background $cBlue1
    width col(5,12) + gutter(12)
    padding s(60) s(50)
    & .rea-content__title
      color $cWhite
    & p
      color $cWhite
  &__title
    font-size: s($sz6);
    font-weight 900
    letter-spacing 1.63px
    text-transform: uppercase
    margin-bottom s(30, $sz6)
    &:after
      content ''
      display: block
      width s(45, $sz6)
      height s(5, $sz6)
      background $cBorderTitles
      margin-top s(11, $sz6)
  &__prof
  &__desc
    & p
      font-size: s($sz7)
      line-height 1.62em
      margin-bottom s(20, $sz7)
      &:last-child
        margin-bottom: 0
  &__desc
    float: right
  &__prof
    position: absolute
    top s(100)
    z-index 2
.rea-content__button
  position: absolute
  right 40px
  bottom -45px
  @extend .buttonLeftToRightBlack
  background $cGithub
  vertical-align middle
  &:before
    background $cGithub + 15%
  &:after
    icon('github-btn');
    float: left
    font-size s(28, $sz10)
    margin-right s(15, 28)
  & span
    padding-top s(6, $sz10)



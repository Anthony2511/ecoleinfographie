/************************************\
		STYLE FOR LINKS
\************************************/

.linkArrowLarge
  display: inline-block
  font-size s($text-L)
  font-weight 600
  line-height 1.2
  color $cBlueCiel
  letter-spacing 0.3px
  transition .2s ease color
  &:after
   icon('arrow-right')
   display inline-block
   font-size s(12, $text-L)
   margin-left  s(10, 12)
   transition .2s ease transform
  &:hover
  &:focus
   color $cBlack
   transition .3s ease color
   outline none
  &:hover:after
  &:focus:after
   transform translateX(s(4, 12))
   transition .3s ease transform




/************************************\
		cover absolute
\************************************/

.cover
  position absolute
  top: 0
  bottom: 0
  right: 0
  left: 0

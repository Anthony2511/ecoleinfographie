.card_student
  position: relative
  display: block
  width s(315);
  background-color $cWhite
  border 1px solid $cGrey3
  &__figure
    position: relative
    overflow hidden
  &__picture-wrapper
    position relative
    height s(180)
    overflow hidden
  &__picture
    @extend .cover
    display: block
    margin auto
    transform scale(1)
    transition .2s $ease-in-out-quart transform
  &__figcaption
    display: block
    position: relative
    padding s(33) 0
    z-index 20
    text-align: center
    &:before
      @extend .baseshawl
      background-color $cWhite
      transform: skewY(1deg)
      top s(-8)
  &__name
    display: block
    font-weight: 700
    color $cBlueTitles
    font-size s($sz6)
    letter-spacing 0.5px
    margin-bottom s(15, $sz6)
    & span
      display: block
      color $cBlueTitles
      font-size s($sz6, $sz6)
      letter-spacing 0.5px
      margin-top: 3px
  &__profession
    display: block
    font-size s($sz7)
  &__year
    display: inline-block
    font-size s($sz7)
    margin s(10, $sz7) 0 s(15, $sz7)
    color $cBlueCiel
    &:before
      icon('hat')
  &__fake-link
    position: relative
    text-align: center
    display: block
    &:before
      content ''
      display: block
      position: relative
      top 1px
      width s(60)
      height 1px
      margin: 0 auto
      background-color $cBlueCiel;
    &:after
      content ''
      display: block
      position: absolute
      bottom: 0
      width 100%
      height 0
      background-color $cBlueCiel
      z-index 10
      transition .2s $ease-in-out-quart height
    &__text
      position relative
      z-index 25
      display: block
      width: 100%
      padding s(20, $sz9) 0
      font-size: s($sz9)
      color $cBlueTitles
      font-weight 600
      text-transform: uppercase
      letter-spacing 0.5px
      transition .2s ease height
  &__real-link
    display: block
    @extend .cover
    z-index 100
    & span
      @extend .hidden

// hover

.card_student:hover
  & .card_student__picture
    transform scale(1.1)
    transition .3s ease transform
  & .card_student__fake-link__text
    color $cWhite
    transition .3s ease color
  & .card_student__fake-link:after
    height 100%
    transition .3s ease height



.graduate
  background-color $cBackgroundGrey
  .header__wrapper
    position relative
  .breadcrumb.breadcrumb--header
    top 0
    margin-top s(192)
  .container
    background-color $cBackgroundGrey
    &:before
      background-color $cBackgroundGrey

.graduateList
  max-width s(1070)
  margin: s(100) auto 0 auto
  padding 0 s($paddingSideGlobal)
  box-sizing content-box
  &__title
    @extend .titleExtraBold26
    color $cBlueTitles
  & .index-rea__filter
    padding-top: 3em
    padding-bottom: 5em
  & .former-students__list
    padding 0
  /*& .former-students__item
    margin-bottom: s(45)*/


.graduate
  .former-students
    &__list
      &:before
      &:after
        content: '';
        display: table;
      &:after
        clear both

.wf-column
  float: left

&__item
      display: inline-block
      float none
      //margin-bottom: s(45)



.graduate
  .load-more
    position: relative
    display: inline-block
    padding s(18.5) s(57)
    background-color $cBlueCiel
    color $cWhite
    text-transform: uppercase
    letter-spacing 1.15px
    font-weight: 900
    z-index 1
    transition .3s background;
    &__container
      margin-top: s(80)
      text-align: center
    &__hidden
      @extend .hidden
    &:hover
      background $cBlueCiel + 15%
      transition .3s background;
    &__label-text
      color $cWhite
      display: inline-block
      transform translateX(0)
      transition .25s ease transform
    &__label
      position: relative
      display: inline-block
      &:after
        position: absolute
        right: -5px
        top: 50%
        transform: translateY(-50%) translateX(0)
        display: inline-block
        content ''
        opacity 0
        width 0px
        height 0px
        background-image none
        transition .25s ease all
        transition-property opacity, transform


.graduate .load-more.loading
  .load-more__label-text
    transform translateX(s(-15))
    transition .25s ease transform
  .load-more__label:after
    opacity 1
    width 20px
    height 20px
    transform translateY(-50%)  translateX(s(10))
    background-image: url('data:image/svg+xml;base64,')
    transition .25s ease all
    transition-property opacity, transform

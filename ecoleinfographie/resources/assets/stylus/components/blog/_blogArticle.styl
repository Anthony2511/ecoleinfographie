// Global
$paddLArticle = 52

.blogArticle
  i
    font-style italic
    font-size inherit
  b
    font-weight 700
    font-size inherit
  a.blogArticle__link
    @extend .linkInText



/************************************\
		HEADER ARTICLE
\************************************/
.blogArticle__header
  margin-bottom s(40, $sz7)
/************************************\
		MAIN TITLE
\************************************/
.blogArticle__title
  width 100%
  padding-left s($paddLArticle, $sz5)
  margin-bottom s(20, $sz5)
  font-size s($sz5)
  font-weight 900
  text-transform: uppercase
  letter-spacing 1px
  line-height: 1.15em
  color $cBlueTitles
  &:after
    content ''
    display: block
    width s(60, $sz5)
    height s(5, $sz5)
    margin-top s(5)
    background $cBorderTitles

/************************************\
      BLOC INFORMATION HEADER
\************************************/

.blogArticle__informations
  margin-bottom s(30)
  padding-left s($paddLArticle)
  & *
    font-size s($sz8)
    line-height 30px

.blogArticle__author
  display: inline-block
  &:after
    @extend .clearfix
  &__img
    float: left
    margin-right s(10, $sz8)
    border-radius 50%
  &__name
    position: relative
    display: inline-block
    color $cBlueCiel
    font-weight: 400
    &:after
      content ''
      position absolute
      left: 0
      bottom: 2px
      display: inline-block
      width 0%
      height 2px
      background-color $cBlueCiel
      transition .2s $ease-out-quart width

.blogArticle__author__name--noprofil
  color $cText-greyblue
.blogArticle__author__name--noprofil:after
  display: none

.blogArticle__author:hover .blogArticle__author__name:after
.blogArticle__author:focus .blogArticle__author__name:after
  width 100%
  transition .2s $ease-out-quart width

.blogArticle__category a
  @extend .blogArticle__author__name


.blogArticle__category a:hover:after
.blogArticle__category a:focus:after
  width 100%
  transition .2s $ease-out-quart width

/************************************\
    DESCRIPTION - TEXT Dâ€™INTRO
\************************************/
.blogArticle__description
  padding-left s($paddLArticle, $sz7)
  font-size s($sz7)
  font-weight 600
  color $cBlack
  line-height: 1.4em

/************************************\
    ARTICLE SECTION
\************************************/
.blogArticle__section
  margin s(40) 0
  &:last-child
    margin-bottom s(120)



/************************************\
		TAGS
\************************************/

.blogArticle__body
  .tags
    display: inline-block
    padding-left 6px
    &__wrapper
      margin s(35) 0 s(80) 0
      padding-left s(52)
    &__item
      position: relative
      display: inline-block
      margin-right s(5)
      &::before
        display: none
      &:after
        content ','
        position: absolute
        right: s(-4)
        bottom: 0
      &:last-child:after
        content ''
    &__link
      display: inline-block
      font-size s($sz10)
    &__label
      font-weight: 700



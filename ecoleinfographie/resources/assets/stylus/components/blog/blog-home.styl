.blog__container
  @extend .containerGridz
  &:after
    @extend .clearfix

.blog-list
  display flex
  flex-wrap wrap
  justify-content space-between
  &__container
    float: left
    max-width 64.596774194% // 801/1240*100

  &__title
    @extend .titleExtraBold26
    color $cBlueTitles
    padding s(50, $sz5) 0 s(30, $sz5)
  & .blog-card
    margin-bottom s(85)

// Modernizez no-flexbox
.no-flexbox
  .blog-list
    &:after
      @extend .clearfix
    .blog-card
      float left
      margin-right s(85)
      &:nth-child(2n +2 )
        margin-right: 0



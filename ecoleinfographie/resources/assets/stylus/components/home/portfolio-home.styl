.home
  .portfolio-home
    position: relative
    &__intro
      position: relative
      baseShawl($cBackgroundBlueGrey, 4.5deg)
      padding-top s(350)
      &__wrapper
        containerGridz()
      &__title
        Catamaran($text-XXXL, 16, 700, 1.2)
        width col(5, 12)
        color $cBlueTitles
        letter-spacing 1px
        margin-bottom s(30, $text-XXXL)
      &__text
        width col(5, 12)
        Catamaran($text-L, 16, 400, 1.6)
        margin-bottom s(30, $text-L)
      &__link
        linkArrowLarge()


/************************************\
		CARTES PROJETS
\************************************/
.home
  .project
    position: relative
    display: inline-block
    &__infos-wrapper
      position: absolute
      top: 0
      left 0
      right 0
      bottom 0
      text-align: center
      background: linear-gradient(135deg, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.9) 37%, rgba(88,88,88,1) 95%, rgba(113,113,113,0.98) 100%);
      /*background: linear-gradient(135deg, rgba(0,0,0,0.92) 0%, rgba(88,88,88,0.99) 90%, rgba(113,113,113,0.95) 100%);*/
      background-image: url('data:image/svg+xml;base64,')
      background-image: linear-gradient(333deg,rgba(0, 0, 0, 0.99) 0%,rgba(39, 39, 39, 0.99) 22.2%,rgba(88, 88, 88, 0.98) 73.5%,rgba(88, 88, 88, 0.98) 100%);

    &__category
    &__author
      Catamaran($sz-textS, 16, 300, 1.1)
      color $cGreyLight
      letter-spacing 0.2px
    &__title
      Catamaran($text-XXXL, 16, 600, 1.1)
      color $cWhite
      letter-spacing 1px
    &__description
      Catamaran($text-L, 16, 300, 1.6)
      color $cGreyLight
      &:after
        display block
        margin: 0 auto
        content ''
        width s(120)
        height 1px
        background-color $cGreyLight
    &__author
      &:before
        icon('men')
        margin-right s(10)

.home
  .project--web .project__category
    &:before
      icon('logoweb')
  .project--2D .project__category
    &:before
      icon('logo2D')
  .project--3D .project__category
    &:before
      icon('logo3D')
  .project--web .project__category
  .project--3D .project__category
  .project--3D .project__category
    &:before
      display: block
      font-size: s(50, $sz-textS)



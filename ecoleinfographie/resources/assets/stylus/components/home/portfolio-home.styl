.home
  .portfolio-home
    position: relative
    &__intro
      background $cBackgroundGrey2
      //padding-top s(350)
      &:before
        bottom 0
      &__wrapper
        containerGridz()
        position: relative
        top s(40)
        box-sizing initial
        padding 0 s($paddingSideGlobal)
      &__title
        @extend .titleXXXL
        line-height: 1.2
        width col(5, 12)
        color $cBlueTitles
        letter-spacing 1px
        margin-bottom s(30, $text-XXXL)
      &__text
        width col(6, 12)
        @extend .paragraph21
        margin-bottom s(30, $text-L)
      &__link
        @extend .linkArrowLarge
        position: relative;
        z-index: 5;


/************************************\
		CARTES PROJETS
\************************************/
.home
  .project
    position: relative
    display: inline-block
    overflow hidden
    &__container-all
      position: relative
      top s(-300)
      z-index 1
    &__wrapper
      position: relative
      clearfix()
    &__wrapper-top
      display: inline-block
      height: 100%
      width 31.65%
      float: right
    &__wrapper-top-inner
      position: relative
      top 1px
      clearfix()
    &--big
      width 60.694444444%
      float: right
    &--middle
      width 39.305555556%
      float: left;
      position: absolute;
      bottom: 0;
    &--small
      width 100%

    &__infos-wrapper
      position: absolute
      top: 0
      left 0
      right 0
      bottom 0
      text-align: center
      background-image: url('data:image/svg+xml;base64,')
      background-image: linear-gradient(333deg,rgba(0, 0, 0, 0.95) 0%,rgba(39, 39, 39, 0.95) 22.2%,rgba(88, 88, 88, 0.95) 73.5%,rgba(88, 88, 88, 0.95) 100%);
      opacity 0
      visibility hidden
      transition .3s ease all
    &__infos-container
      position: absolute
      overflow hidden
      top 50%
      transform translateY(-58%)
      right: 0
      left: 0
      margin-left auto
      margin-right auto
      padding s(10) s(10)
      opacity 0
      transition .3s ease all
      transition-property opacity, transform
    &__img
      width 100%
      display: block
    &__category
    &__author
      font-size $sz-textS
      font-weight 300
      line-height 1.1
      color $cGreyLight
      letter-spacing 0.2px
    &__category
      display block
      margin-bottom s(30, $sz-textS)
    &__title
      @extend .titleXXXL
      color $cWhite
      letter-spacing 1px
      margin-bottom s(10, $text-XXXL)
    &__description
      @extend .paragraph21
      max-width: s(410, $text-L)
      margin: 0 auto s(11, $text-L) auto
      color $cGreyLight
      &:after
        display block
        margin: 0 auto
        content ''
        width s(140)
        height 1px
        background-color $cGreyLight
        margin: s(20, $text-L) auto s(20, $text-L) auto
        transform scaleX(0.1) translateZ(0)
        transition .3s ease transform
    &__author
      &:before
        icon('men')
        margin-right s(10)
    &__link
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      & span
        hidden()

.home
  .project--web .project__category
    &:before
      icon('logoweb')
  .project--2D .project__category
    &:before
      icon('logo2D')
  .project--3D .project__category
    &:before
      icon('logo3D')
  .project--web .project__category
  .project--3D .project__category
  .project--2D .project__category
    &:before
      display: block
      font-size: s(50, $sz-textS)
      margin-bottom s(10, 50)

.home
  .project--small
  .project--middle
    .project__title
      @extend .titleXXL
      color $cWhite


/************************************\
		ANIMATION OVERLAY
\************************************/

.home
  .project:hover
  .project:focus
    & .project
      &__infos-wrapper
        visibility visible
        opacity 1
        transform translate3D(0,0,0)
        transition .3s ease all
        transition-property opacity, transform
      &__infos-container
        transform translateY(-50%)
        opacity 1
        transition .4s ease all
        transition-property opacity, transform
      &__description
        &:after
          transform scaleX(1) translateZ(0)
          transition .4s ease transform


@media screen and (max-width: 1350px)
  .home .project--small .project__title
    font-size s($sz5)
  .home .project--small .project__description
    font-size s($sz7)

@media screen and (max-width: 1200px)
  .home .project__container-all
    top auto
    max-width s(1100)
    margin 0 auto
  .home .portfolio-home__intro__wrapper
    top auto
  .home .portfolio-home__intro__title
  .home .portfolio-home__intro__text
    width 100%
  .home .project
  .home .project__wrapper-top
    width 50%
  .home .project--middle
  .home .project--big
  .home .project__wrapper-top
    position relative
    top auto
    bottom auto
    float: none
  .home .project.project--small
    width 100%
  .home .portfolio-home__intro__wrapper
    margin-bottom s(60)
  .home .project__wrapper-top-inner
  .home .project__wrapper
    width s(989)
    width 100%
    text-align: center
  .home .project .project__title
    font-size s($sz5)
  .home .project .project__description
    font-size s($sz7)

@media screen and (max-width: 1024px)
  .home .project, .home .project__wrapper-top
    width 70%
  .home .portfolio-home__intro__title
    font-size s($sz11)
    text-align: center
@media screen and (max-width: 1024px)
  .home .project, .home .project__wrapper-top
    width: 100%
  .home .project__category
    display: none
  .home .portfolio-home__intro__text
  .home .portfolio-home__intro__link
    display: block
    text-align: center
@media screen and (max-width: 550px)
  .home .project .project__title
    font-size 18px
  .home .project.project__description
  .home .project .project__description
    font-size 15px
    line-height 1.4em
  .home .project__author
    font-size 15px

.home
  .intro
    box-sizing content-box
    padding s(150) s($paddingSideGlobal) 0
    background-color $cWhite
    z-index 1
    overflow hidden
    clearfix(both)
    &__content
      float left
      width col(5, $ws_iGridzColumns)
      clearfix(both)
    &__title
      max-width s(375, $text-bigTitleHome)
      margin-bottom s(30, $text-bigTitleHome)
      @extend .title51
    &__text
      margin-bottom s(30)
      @extend .paragraph21
    &__link
      @extend .linkArrowLarge
      margin-bottom s(20, $text-L)
    &__img
      float right
      max-width 100%
      height auto

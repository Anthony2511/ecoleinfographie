.home
  .news-home
    position: relative
    background $cBackgroundGrey2
    &__container
      max-width s(1050)
      margin 0 auto
      padding s(150) s($paddingSideGlobal)
      baseShawl($cBackgroundGrey2, 4.5deg)
      box-sizing content-box
    .news-card
      &__content
        width s(735)
      &__image
        right s(12)
      &__title
        max-width s(385, $sz4)
        width auto
      &__excerpt
        max-width s(385, $sz8)
        width auto
    .news-card:hover .news-card__image
      right s(32)
      transition .3s ease right
      .news-card:hover .news-card__time
        right s(-20)
        left auto
        transition .3s ease right

.home
  .news-home__allNews
    @extend .buttonLeftToRight
    position: relative
    top s(30, $sz10)
    margin-left s(170, $sz10)
    z-index 10

linkArrowLarge()
  display: inline-block
  Catamaran($text-L, 16, 600, 1.2)
  color $cBlueCiel
  letter-spacing 0.3px
  transition .2s ease color
  &:after
    icon('arrow-right')
    display inline-block
    font-size s(12, $text-L)
    margin-left  s(10, 12)
    transition .2s ease transform
  &:hover
    color $cBlack
    transition .3s ease color
  &:hover:after
    transform translateX(s(4, 12))
    transition .3s ease transform


CategoryStyle()
  display: inline-block
  Catamaran(13, 16, 600, 1)
  color $cWhite
  text-transform: uppercase
  letter-spacing 0.75px
  padding s(9, 13) s(30, 13)
  border-radius 17px 0 17px 0

buttonLeftToRight($sizeFont)
  position: absolute
  display: inline-block
  Catamaran($sizeFont, 16, 700, 1)
  padding s(18, $sizeFont) s(57, $sizeFont)
  background-color $cBlueCiel
  color $cWhite
  text-transform: uppercase
  letter-spacing 1px
  z-index 1
  &:before
    content: '';
    position: absolute;
    width: 0%;
    height: 100%;
    top: 0;
    left: 0;
    background: $cBlueCiel + 15%
    z-index: -1;
    transition .3s width;
  &:hover:before
  &:focus:before
    width 100%
  & span
    hidden()
